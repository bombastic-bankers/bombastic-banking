{
  "compilerOptions": {
    "target": "ES2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "outDir": "dist",
    "rootDir": ".",

    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
